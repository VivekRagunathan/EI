<UserControl x:Class="EasyInstallIDE.PropertyGrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel x:Name="MainPanel" LastChildFill="True">
        <StackPanel x:Name="Toolbar" DockPanel.Dock="Top">
            <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="Black" BorderThickness="2">
                
            </Border>
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom">
            <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="Black" BorderThickness="2">

            
            <TextBlock x:Name="Description"></TextBlock>
                </Border>
        </StackPanel>
        <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="Blue" BorderThickness="2">
            <Grid x:Name="Properties" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="140" Width="Auto"/>
                    <ColumnDefinition MaxWidth="2"/>
                    <ColumnDefinition MinWidth="200" Width="Auto"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </Border>
    </DockPanel>
</UserControl>
