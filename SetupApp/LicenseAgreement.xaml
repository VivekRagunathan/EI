<UserControl x:Class="EasyInstall.LicenseAgreement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="539">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" MinHeight="50" Orientation="Horizontal">
            <RadioButton Content="I agree" Margin="4"></RadioButton>
            <RadioButton Content="I do not agree" Margin="4"></RadioButton>
        </StackPanel>
        
        <Border Margin="6" CornerRadius="3" BorderBrush="Gold">
            <RichTextBox BorderBrush="Transparent">

            </RichTextBox>
        </Border>
    </DockPanel>
</UserControl>
